<div class="container">

<h1>Burgers!</h1>

<div class="add">
<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="burger_name">
  </div>

  <div class="form-group">
    <label for="burge">Devour?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devour!<br>
    <input type="radio" name="devoured" value="0"> Cook
  </div>
  <button type="submit">Add Burger</button>
</form>
</div>

<div class="items">
<div class="menu">
<h2>Burgers that are not devoured!</h2>

<ol>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">DEVOUR TIME!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ol>
</div>

<div class="eaten">
<h2>Burgers that are devoured!</h2>

<ol>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">BURGER COOKED!</button>
        </form>
      </li>
    {{/if}}
  {{/each}}
</ol>
</div>
</div>
</div>